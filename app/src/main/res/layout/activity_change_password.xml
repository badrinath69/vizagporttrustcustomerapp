<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ntf4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChangePasswordActivity">


    <ImageButton
        android:background="@color/white"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="60dp"

        android:id="@+id/bt_back_1"
        android:src="@drawable/back_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/textView_5_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Old Password"

        android:textColor="@color/underline"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_back_1"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_5_1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="32dp"
        android:elevation="10dp"

        android:hint="Enter Your Password"
        app:hintTextColor="@color/underline"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/textView_5_1"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="textPersonName"
            android:id="@+id/oldpassword"



            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></com.google.android.material.textfield.TextInputEditText>


    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/textView_5_1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="New Password"

        android:textColor="@color/underline"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_5_1"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_5_1_2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="32dp"
        android:elevation="10dp"

        android:hint="Enter Your Password"

        app:hintTextColor="@color/underline"
        app:layout_constraintEnd_toEndOf="parent"

        app:passwordToggleEnabled="true"

        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/textView_5_1_2"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:inputType="textPassword"
            android:id="@+id/newpwd"
            android:maxLength="15"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></com.google.android.material.textfield.TextInputEditText>


    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/textView_5_1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Confirm Password"

        android:textColor="@color/underline"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_5_1_2"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_5_1_3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="32dp"
        android:elevation="10dp"

        android:hint="Enter Your Password"
        app:hintTextColor="@color/underline"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"

        app:layout_constraintTop_toBottomOf="@id/textView_5_1_3"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:inputType="textPassword"
            android:id="@+id/renewpwd"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></com.google.android.material.textfield.TextInputEditText>


    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changepwdbutton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="33dp"
        android:background="@color/newblue"

        android:text="CHANGE PASSWORD"
        android:textColor="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_5_1_3"></androidx.appcompat.widget.AppCompatButton>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="33dp"
        android:id="@+id/recordadded"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changepwdbutton"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>