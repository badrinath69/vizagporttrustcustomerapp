    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        app:cardElevation="8dp"
        android:layout_marginTop="8dp"
            android:backgroundTint="@color/linetext"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/newblue"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_one"
                android:text="Complaint Information"
                android:textColor="@color/white"
                android:textSize="24dp"


                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/backdett"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:id="@+id/backdett"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/closebg"
                android:textColor="@color/newblue"
                android:text="    Close"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:paddingEnd="12dp"
                android:fontFamily="@font/source_sans_pro"
                android:drawableTint="@color/newblue"
                android:drawableEnd="@drawable/closebg2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"></androidx.appcompat.widget.AppCompatButton>
        </androidx.constraintlayout.widget.ConstraintLayout>







        <!--        <View-->


        <!--            android:layout_marginTop="128dp"-->
        <!--            android:layout_marginBottom="12dp"-->
        <!--            android:layout_marginLeft="24dp"-->
        <!--            android:layout_width="1dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:background="@color/design_default_color_primary_dark"></View>-->



        <View


            android:layout_width="6dp"
            android:layout_height="match_parent"



            android:background="@color/newblue"></View>


        <LinearLayout
            android:background="@color/linetext"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <!--            <View-->


            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:background="@color/design_default_color_primary_dark"></View>-->

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView


                        android:backgroundTint="@color/newblue"
                        android:gravity="center"
                        android:drawableStart="@drawable/datetimepurple"
                        android:drawableTint="@color/newblue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="  Raiseddate : "
                        android:textColor="@color/newblue"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingEnd="4dp"
                        android:textColor="@color/black"
                        android:id="@+id/showtime"
                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content"

                        android:layout_weight="4"
                        android:ellipsize="end"
                        android:fontFamily="@font/source_sans_pro"
                        android:maxLines="3"
                        android:scrollHorizontally="true"
                        android:text="Loading..."></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:drawableStart="@drawable/file_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Uploaded file :"
                        android:drawableTint="@color/newblue"
                        android:textColor="@color/newblue"
                        android:textStyle="bold"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"

                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="1dp"
                        app:cardElevation="14dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/showimgid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/image_acc"></ImageView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>

            <!--            <View-->


            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:background="@color/linetext"></View>-->


            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:weightSum="4">

                <TextView


                    android:gravity="center"
                    android:drawableStart="@drawable/designservice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="  Against : "
                    android:drawableTint="@color/newblue"
                    android:textColor="@color/newblue"
                    android:textStyle="bold"></TextView>

                <ScrollView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="76dp">
                    <TextView
                        android:paddingStart="8dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="4dp"
                        android:id="@+id/showagainst"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        android:autoSizeTextType="none"


                        android:ellipsize="end"

                        android:fontFamily="@font/source_sans_pro"

                        android:maxLines="30"
                        android:scrollHorizontally="true"
                        android:text="         Loading..."></TextView>
                </ScrollView>
            </LinearLayout>

            <!--            <View-->


            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:background="@color/linetext"></View>-->


            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:gravity="center"
                    android:drawableStart="@drawable/raise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="  Description : "
                    android:drawableTint="@color/newblue"
                    android:textColor="@color/newblue"
                    android:textStyle="bold"></TextView>


                <ScrollView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="116dp">
                    <TextView
                        android:paddingStart="8dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="4dp"
                        android:id="@+id/showdes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/source_sans_pro"
                        android:maxLines="30"
                        android:text="       Loading..."></TextView>
                </ScrollView>





            </LinearLayout>
            <!--            <View-->


            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:background="@color/linetext"></View>-->




