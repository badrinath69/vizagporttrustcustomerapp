<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPwdActivity">

    <ImageButton
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:id="@+id/bt_back_3"
        android:src="@drawable/back_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/textView_5_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Verify OTP"

        android:textColor="@color/underline"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_back_3"></TextView>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/textView_5_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"

        android:text="Enter the OTP sent to your mobile"

        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_5_9"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textView_5_7"

        android:layout_marginTop="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="32dp"
        android:elevation="10dp"

        android:hint="Enter Your Mobile Number"
        app:hintTextColor="@color/underline"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"



        app:layout_constraintTop_toBottomOf="@id/textView_5_8"        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/getnumber"
            android:focusableInTouchMode="true"

            android:inputType="number"
            android:maxLength="15"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></com.google.android.material.textfield.TextInputEditText>


    </com.google.android.material.textfield.TextInputLayout>


    <com.mukesh.OtpView

        android:id="@+id/textInputLayout_5_6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_weight="1.5"

        android:cursorVisible="true"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true"
        android:hint="----"
        android:inputType="number"

        app:hideLineWhenFilled="true"
        app:itemCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@id/textView_5_7"
        app:lineColor="@color/design_default_color_primary_dark"
        app:viewType="line"></com.mukesh.OtpView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendbt"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="33dp"
        android:theme="@style/AccentButton"
        style="@style/Widget.AppCompat.Button.Colored"

        android:text="Send OTP"
        android:textColor="@color/white"


        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_5_6"></androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verifyfbnbt"


        android:visibility="invisible"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="33dp"
        android:theme="@style/AccentButton"
        style="@style/Widget.AppCompat.Button.Colored"

        android:text="Verify OTP"
        android:textColor="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_5_6"></androidx.appcompat.widget.AppCompatButton>




